<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.ac.sicsr.sram.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"

                android:layout_above="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:cropToPadding="false"
                android:src="@drawable/my_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/signInPrn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="PRN"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/signInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:ems="10"
                    android:focusable="true"
                    android:fontFamily="Roboto"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:password="true"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#1487d4"
                    android:fontFamily="Roboto"
                    android:onClick="loginNow"
                    android:padding="16dp"
                    android:text="SIGN IN"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:text="Not Registered? Sign Up Here."
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gotoSignUpPage"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:onClick="gotoSignUpPage" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
